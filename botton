<body>
  <main class="card">
    <h1>Primeira Pessoa a Clicar</h1>
    <p class="subtitle">Digite seu nome e clique. O primeiro nome será fixado neste navegador.</p>

    <div class="row">
      <input id="nome" type="text" placeholder="Seu nome" autocomplete="name" />
    </div>
    
    <button id="botao" class="big">CLICAR</button>

    <div id="resultado" class="result" style="display:none"></div>
    <div class="muted">Dica: recarregar a página não apaga o resultado. Use <code>Limpar</code> abaixo se quiser reiniciar neste dispositivo.</div>

    <div class="row" style="margin-top:12px; justify-content:flex-end">
      <button id="limpar" style="padding:10px 14px; border-radius:12px; border:1px solid rgba(255,255,255,0.15); background:transparent; color:var(--text); cursor:pointer">Limpar</button>
    </div>

    <div class="footer">Somente HTML + JavaScript (sem servidor). O resultado vale por navegador/dispositivo.</div>
  </main>

  <script>
    // Chave usada no armazenamento local do navegador
    const STORAGE_KEY = "primeira_pessoa_nome";

    const input = document.getElementById("nome");
    const botao = document.getElementById("botao");
    const limpar = document.getElementById("limpar");
    const resultado = document.getElementById("resultado");

    // Ao carregar, verifica se já existe alguém salvo neste navegador
    const salvo = localStorage.getItem(STORAGE_KEY);
    if (salvo) {
      mostrarResultado(`Já temos a primeira pessoa: ${salvo}`, /*warn=*/true);
      botao.disabled = true;
    }

    botao.addEventListener("click", () => {
      const nome = (input.value || "").trim();
      if (!nome) {
        alert("Digite seu nome antes de clicar!");
        input.focus();
        return;
      }

      const atual = localStorage.getItem(STORAGE_KEY);
      if (!atual) {
        // Salva a primeira pessoa neste navegador
        localStorage.setItem(STORAGE_KEY, nome);
        mostrarResultado(`A primeira pessoa foi: ${nome}`);
        botao.disabled = true;
      } else {
        mostrarResultado(`Já temos a primeira pessoa: ${atual}`, /*warn=*/true);
      }
    });

    limpar.addEventListener("click", () => {
      localStorage.removeItem(STORAGE_KEY);
      resultado.style.display = "none";
      input.value = "";
      botao.disabled = false;
      input.focus();
    });

    function mostrarResultado(texto, warn = false) {
      resultado.textContent = texto;
      resultado.classList.toggle("warn", warn);
      resultado.style.display = "block";
    }
  </script>
</body>
